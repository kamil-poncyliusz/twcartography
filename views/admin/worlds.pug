doctype html
html(lang="pl-PL")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title TW Cartography
    include ../favicon.pug
    link(rel="stylesheet", href="/css/reset.css", type="text/css")
    link(rel="stylesheet", href="/css/main.css", type="text/css")
    link(rel="stylesheet", href="/css/admin/worlds.css", type="text/css")
    script(src="/scripts/admin/worlds.js", type="module", defer)
  body
    form
      table
        thead
          tr
            th ID
            th= translation.server
            th= translation.number
            th= translation.domain
            th= translation.startTime
            th= translation.endTime
            th
            th 
        tbody
          each world in worlds
            tr
              td= world.id
              td= world.server
              td= world.num
              td= world.domain
              td= world.startTimestamp
              td= world.endTimestamp
              td
                button.close-world-button(type="button", data-world-id=world.id)= translation.closeDown
              td
                button.delete-world-button(type="button", data-world-id=world.id)= translation.delete
          tr
            td -
            td
              input#server(type="text", name="server", autocomplete="off", placeholder=translation.server.toLowerCase())
            td
              input#num(type="text", name="num", autocomplete="off", placeholder=translation.number.toLowerCase())
            td
              input#domain(type="text", name="domain", autocomplete="off", placeholder=translation.domain.toLowerCase())
            td
              input#start-timestamp(type="number", name="start-timestamp", autocomplete="off", placeholder="timestamp")
            td
              input#end-timestamp(type="number", name="end-timestamp", autocomplete="off", placeholder="timestamp", value="0")
            td
            td
              input(type="submit", value=translation.add)
